@model IEnumerable<console_controle.Models.Candidate>

@{
    ViewData["Title"] = "Candidates List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container py-5">
        <h1 class="text-center mb-4">Candidates List</h1>
        <div class="row">
            @foreach (var candidate in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@candidate.Name</h5>
                            <p class="card-text">Position: @candidate.Position</p>
                            <p class="card-text">Department: @candidate.Department</p>
                            <p class="card-text">Hiring Manager: @candidate.HiringManager?.Name </p>
                            <a href="@Url.Action("SubmitAssessment", "Home", new { candidateId = candidate.Id })" class="btn btn-primary">Go to Assessment</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
