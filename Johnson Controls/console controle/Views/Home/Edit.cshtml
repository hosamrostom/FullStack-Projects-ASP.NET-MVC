@* @model console_controle.Models.Candidate

@{
    ViewData["Title"] = "Edit Candidate & Hiring Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GxvVY1GpHPrHhTV7DfGzE29UCJAk5mCem6Ls8edDzkoe5lvbuH6x9snHLxKc5lZA" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Edit Candidate & Hiring Manager</h2>

        <!-- Candidate Form -->
        <form asp-action="SaveCandidate" asp-controller="Home" method="post" class="needs-validation mb-4" novalidate>
            <input type="hidden" asp-for="Id" />

            <h3>Candidate Details</h3>
            <div class="row g-3">
                <!-- Candidate Name -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter candidate name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Position -->
                <div class="col-md-6">
                    <label asp-for="Position" class="form-label"></label>
                    <input asp-for="Position" class="form-control" placeholder="Enter position" required />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <!-- Department -->
                <div class="col-md-6">
                    <label asp-for="Department" class="form-label"></label>
                    <select asp-for="Department" class="form-select" asp-items="@(new SelectList(new List<string> {
                        "Product Management ESG", "HR & EHS", "UPG & Controls", "Supply Chain", "Service Operations",
                        "Factory", "Emerging Market", "Finance & Accounting", "Direct Sales", "Marketing & Information Innovation",
                        "R&D / Product Management UPG", "Spare Part", "ESG Sales & Allied", "CEO Office", "International Business"
                    }))" required>
                        <option selected disabled value="">Select Department</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <!-- Interview Date -->
                <div class="col-md-6">
                    <label for="interviewDate" class="form-label">Interview Date</label>
                    <input type="date" class="form-control" id="interviewDate" name="InterviewDate" value="@Model.InterviewDate.ToString("yyyy-MM-dd")" required>
                    <div class="invalid-feedback">Interview Date is required.</div>
                </div>

                <!-- Assessment Type -->
                <div class="col-md-6">
                    <label asp-for="AssessmentTypeId" class="form-label">Assessment Type</label>
                    <select asp-for="AssessmentTypeId" class="form-control" asp-items="@(ViewData["AssessmentTypes"] as IEnumerable<SelectListItem>)">
                        <option value="">Select an Assessment Type</option>
                    </select>
                    <span asp-validation-for="AssessmentType.Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Save Candidate Button -->
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save Candidate</button>
            </div>
        </form>

        <!-- Hiring Manager Form -->
        <form asp-action="SaveHiringManager" asp-controller="Home" method="post" class="needs-validation" novalidate>
            <h3>Hiring Manager Details</h3>
            <div class="row g-3">
                <!-- Hiring Manager Name -->
                <div class="col-md-6">
                    <label asp-for="HiringManager.Name" class="form-label"></label>
                    <input asp-for="HiringManager.Name" class="form-control" placeholder="Enter manager name" required />
                    <span asp-validation-for="HiringManager.Name" class="text-danger"></span>
                </div>

                <!-- Hiring Manager Email -->
                <div class="col-md-6">
                    <label asp-for="HiringManager.Email" class="form-label"></label>
                    <input asp-for="HiringManager.Email" type="email" class="form-control" placeholder="Enter manager email" required />
                    <span asp-validation-for="HiringManager.Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Save Hiring Manager Button -->
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Save Hiring Manager</button>
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


