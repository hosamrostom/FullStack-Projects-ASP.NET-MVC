@model List<console_controle.Models.Candidate>

<div class="container mt-5">
    <h2>Candidate List</h2>
    <a asp-action="Create" asp-controller="Home" class="btn btn-primary mb-3">Add New Candidate</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Position</th>
                <th>Assessment Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var candidate in Model)
                {
                    <tr>
                        <td>@candidate.Name</td>
                        <td>@candidate.Department</td>
                        <td>@candidate.Position</td>
                        <td>@candidate.AssessmentType?.Name</td>
                        <td>
@*                             <a asp-action="Edit" asp-controller="Home" asp-route-id="@candidate.Id" class="btn btn-warning btn-sm">Edit</a>
 *@                            <form asp-action="Delete" asp-controller="Home" asp-route-id="@candidate.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
