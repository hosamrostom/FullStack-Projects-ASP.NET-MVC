@model console_controle.Models.Candidate

@{
    ViewData["Title"] = "Create Candidate";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GxvVY1GpHPrHhTV7DfGzE29UCJAk5mCem6Ls8edDzkoe5lvbuH6x9snHLxKc5lZA" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <div id="recruiter-form" class="mb-4">
            <h2 class="text-center mb-4">Recruiter Form</h2>
            <form asp-action="Create" asp-controller="Home" method="post" class="needs-validation" novalidate>
                <div class="row g-3">
                    <!-- Candidate Name -->
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter candidate name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Position -->
                    <div class="col-md-6">
                        <label asp-for="Position" class="form-label"></label>
                        <input asp-for="Position" class="form-control" placeholder="Enter position" required />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>

                    <!-- Department -->
                    <div class="col-md-6">
                        <label asp-for="Department" class="form-label"></label>
                        <select asp-for="Department" class="form-select" asp-items="@(new SelectList(new List<string> {
                            "Product Management ESG", "HR & EHS", "UPG & Controls", "Supply Chain", "Service Operations",
                            "Factory", "Emerging Market", "Finance & Accounting", "Direct Sales", "Marketing & Information Innovation",
                            "R&D / Product Management UPG", "Spare Part", "ESG Sales & Allied", "CEO Office", "International Business"
                        }))" required>
                            <option selected disabled value="">Select Department</option>
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <!-- Interview Date -->
                    <div class="col-md-6">
                        <label for="interviewDate" class="form-label">Interview Date</label>
                        <input type="date" class="form-control" id="interviewDate" name="InterviewDate" required>
                        <div class="invalid-feedback">Interview Date is required.</div>
                    </div>

                    <!-- Hiring Manager Name -->
                    <div class="col-md-6">
                        <label>Hiring Manager</label>
                        <label asp-for="HiringManager.Name" class="form-label"></label>
                        <input asp-for="HiringManager.Name" class="form-control" placeholder="Enter manager name" required />
                        <span asp-validation-for="HiringManager.Name" class="text-danger"></span>
                    </div>

                    <!-- Hiring Manager Email -->
                    <div class="col-md-6">
                        <label for="hiringManagerEmail" class="form-label">Hiring Manager Email</label>
                        <input type="email" class="form-control" id="hiringManagerEmail" name="HiringManager.Email" placeholder="Enter manager email" required>
                        <div class="invalid-feedback">Valid email is required.</div>
                    </div>

                    <!-- Assessment Type -->
                    <div class="col-md-6">
                        <label asp-for="AssessmentTypeId" class="form-label">Assessment Type</label>
                        <select asp-for="AssessmentTypeId" class="form-control" asp-items="@(ViewData["AssessmentTypes"] as IEnumerable<SelectListItem>)">
                            <option value="">Select an Assessment Type</option>
                        </select>
                        <span asp-validation-for="AssessmentType.Name" class="text-danger"></span>
                    </div>
                </div>

                @* <!-- Button for Saving Hiring Manager Information -->
                <div class="mt-4 text-center">
                    <button type="submit" name="action" value="saveHiringManager" class="btn btn-primary btn-lg">Save Hiring Manager</button>
                </div> *@

                <!-- Button for Saving Candidate Information -->
                <div class="mt-4 text-center">
                    <button type="submit" name="action" value="saveCandidate" class="btn btn-success btn-lg">Save Candidate</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
