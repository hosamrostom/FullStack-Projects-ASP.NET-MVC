        </header>

        <script>
            function setView(view) {
                const recruiterBtn = document.getElementById('recruiter-btn');
                const hiringManagerBtn = document.getElementById('hiring-manager-btn');

                if (view === 'recruiter') {
                    recruiterBtn.classList.add('btn-active');
                    recruiterBtn.classList.remove('btn-inactive');
                    hiringManagerBtn.classList.remove('btn-active');
                    hiringManagerBtn.classList.add('btn-inactive');
                } else {
                    hiringManagerBtn.classList.add('btn-active');
                    hiringManagerBtn.classList.remove('btn-inactive');
                    recruiterBtn.classList.remove('btn-active');
                    recruiterBtn.classList.add('btn-inactive');
                }
            }
        </script>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - Recruitment Assessment Platform -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

